<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Queue_Interview</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Queue_Interview.styles.css" asp-append-version="true" />
</head>

<style>
    body {
        margin: 0;
        font-family: 'Roboto', 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        font-size: var(--bs-body-font-size);
        font-weight: var(--bs-body-font-weight);
        line-height: var(--bs-body-line-height);
        color: var(--bs-body-color);
        text-align: var(--bs-body-text-align);
        background-color: var(--bs-body-bg);
        -webkit-text-size-adjust: 100%;
        -webkit-tap-highlight-color: transparent;
        height: 100vh;
        width: 100vw;
    }

        body::after {
            content: "";
            background: url(/src/login_bckgd.png);
            background-repeat: no-repeat;
            background-size: cover;
            background-attachment: fixed;
            opacity: 0.2;
            top: 0;
            left: 0;
            bottom: 0;
            right: 0;
            position: absolute;
            z-index: -1;
            font-family: Calibri, Verdana, Helvetica, sans-serif;
        }
</style>

<body>
    <div class="position-absolute p-2" style="width: 100%">
        <div class="d-flex align-items-center justify-content-center gap-4">
            <a asp-controller="Home" asp-action="Index" role="button" class="btn btn-success text-white">Application Form</a>
            <a asp-controller="Display" asp-action="Pre_Screening" target="_blank" role="button" class="btn btn-danger text-white">Pre-Screening Monitor</a>
            <a asp-controller="Display" asp-action="Initial_Interview" target="_blank" role="button" class="btn btn-warning text-dark">Initial Interview Monitor</a>
            <a asp-controller="Display" asp-action="Final_Interview" target="_blank" role="button" class="btn btn-primary text-white">Final Interview Monitor</a>

        </div>
    </div>

    <div class="container-fluid p-0 h-100">
        @RenderBody()
    </div>



    <!--Signal R-->
    <script src="~/js/signalr.js"></script>
    <script src="~/js/TableHub.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>  
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
