﻿@using Queue.Models.ViewModel
@model ServingVM

@{
    ViewData["Title"] = "Pre-Screening";
    Layout = "_DisplayLayout";
}

<style>
    .card {
        border-radius: 10px;
    }

    .number2 {
        padding-top: 1.5rem;
        padding-bottom: 1.5rem;
    }


    @@media (min-width: 2000px) {
        .container {
            padding-top: 2rem;
        }

        .title {
            font-size: 40px;
        }

        .number2 h1 {
            font-size: 120px !important;
        }
    }

    @@media (min-width: 1200px) {
        .container-fluid {
            padding-left: 10rem;
            padding-right: 10rem;
        }
    }
</style>

<div class="d-flex align-items-center justify-content-between">
    <h1 style="font-size: 60px;">STAGE 1: <span class="text-decoration-underline fst-italic">Pre-Screening</span></h1>
    <div class="time text-center rounded">
        <h1 class="m-0" style="font-size: 56px;" id="time"></h1>
        <h3 id="date"></h3>
    </div>
</div>



<h1 class="text-center nw fst-italic mt-5" style="font-size: 60px;">Now Serving</h1>
<div class="container my-5">

    @* <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 gy-5 py-2 justify-content-center"> *@
    <div class="row py-3 g-4 gy-5 justify-content-center">

        @if (Model.Tables != null && Model.Servings != null)
        {
            @foreach (var table in Model.Tables)
            {
                var servingQueue = Model.Servings.Where(s => s.TableId == table.TableId && s.StageId == 1);

                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="number1">
                                <h3>@table.Username</h3>
                            </div>
                            <div class="number2">
                                @if (servingQueue.Any())
                                {
                                    <h1 id="table-@table.TableId" class="text-center fw-bold" style="font-size: 92px;">
                                        @foreach (var serving in servingQueue)
                                        {
                                            <text>A - @serving.ApplicantId</text>
                                        }
                                    </h1>
                                }
                                else
                                {
                                    <h1 id="table-@table.TableId" class="text-center fw-bold" style="font-size: 92px;">----</h1>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

</div>


<!-- Modal -->
<div class="modal fade block" id="continueModal">
    <div class="modal-dialog">
        <div class="modal-content p-3">
            <div class="modal-body text-center">
                <h4 class="modal-title">Click to continue!</h4>
            </div>

            <button type="button" class="btn btn-primary w-100" data-bs-dismiss="modal">Continue</button>

        </div>
    </div>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        // Initial display
        displayDateTime();
        setInterval(displayDateTime, 1000);

    });


    const displayDateTime = () => {
        var currentTime = new Date();
        var options = { hour: '2-digit', minute: '2-digit', second: '2-digit', hour12: true };
        var formattedTime = currentTime.toLocaleString('en-US', options);
        var optionsDate = { year: 'numeric', month: 'long', day: 'numeric' };
        var formattedDate = currentTime.toLocaleString('en-US', optionsDate);

        $('#time').text(formattedTime);
        $('#date').text(formattedDate);
    };

    function contModal(){
        var modal = document.getElementById("continueModal");
        modal.style.display = "block";
    }
    

</script>

